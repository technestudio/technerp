<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.whatsapp</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='website']" position="inside">
                <h2>Whatsapp</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_whatsapp" id="whatsapp_settings"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Enable Whatsapp Button" for="whatsapp_settings" />
                            <div class="text-muted">
                                Allows users see whatsapp float button when website ready.
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-4 o_setting_box" id="whatsapp_number" attrs="{'invisible': [('enable_whatsapp', '=', False)]}">
                        <div class="o_setting_right_pane">
                            <div class="text-muted">
                                Please type your whatsapp number
                            </div>
                            <field name="phone" placeholder="Whatsapp Number" required="1" />
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>

</odoo>